<row box-="square" class="widget" id="clock-widget" pad-="2 1">
    <column align-="center" self-="!shrink" id="clock-circle">
        <span>| |</span>
        <span>⣀⡾⠋⠉⠉⠙⢷⣄</span>
        <span>⡾ <span style="color: var(--red)">/</span> ⢷</span>
        <span>⣇ <span style="color: var(--lavender)">|</span> ⢹</span>
        <span>⢿ <span style="color: var(--lavender)">|</span> ⡾</span>
        <span>⠙⢷⣄⣀⣀⣀⡾⠋</span>
        <span>| |</span>
    </column>
    <column self-="grow" align-="center" gap-="1">
        <span id="clock-date">--</span>
        <span id="clock-time">--</span>
    </column>
</row>

<script>
    const dateNode = document.getElementById('clock-date')
    const timeNode = document.getElementById('clock-time')

    const dateFormatter = new Intl.DateTimeFormat('en-US', {
        weekday: 'short',
        month: 'short',
        day: 'numeric',
    })

    const timeFormatter = new Intl.DateTimeFormat('en-US', {
        hour: 'numeric',
        minute: '2-digit',
        hour12: true,
        timeZoneName: 'short',
    })

    const updateClock = () => {
        const now = new Date()
        if (dateNode) dateNode.textContent = dateFormatter.format(now)
        if (timeNode) timeNode.textContent = timeFormatter.format(now)
    }

    updateClock()
    setInterval(updateClock, 1000)
</script>

<style>
    #clock-widget {
        grid-column: 1;
        grid-row: 1 / 2;
    }

    #clock-circle span {
        white-space: pre;
        color: var(--foreground2);
    }
</style>
